
# Cache settings for different asset types

# HTML - short cache
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# CSS and JS - longer cache with hashed filenames
/assets/*.css
  Cache-Control: public, max-age=31536000, immutable
/assets/*.js
  Cache-Control: public, max-age=31536000, immutable

# Fonts
/assets/*.woff2
  Cache-Control: public, max-age=31536000, immutable
/assets/*.woff
  Cache-Control: public, max-age=31536000, immutable
/assets/*.ttf
  Cache-Control: public, max-age=31536000, immutable

# Images
/assets/*.jpg
  Cache-Control: public, max-age=31536000, immutable
/assets/*.jpeg
  Cache-Control: public, max-age=31536000, immutable
/assets/*.png
  Cache-Control: public, max-age=31536000, immutable
/assets/*.webp
  Cache-Control: public, max-age=31536000, immutable
/assets/*.svg
  Cache-Control: public, max-age=31536000, immutable
/assets/*.ico
  Cache-Control: public, max-age=31536000, immutable

# XML Files
/*.xml
  Cache-Control: public, max-age=86400

# JSON files
/*.json
  Cache-Control: public, max-age=86400

# Force HTTPS and other security headers
/*
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  X-Content-Type-Options: nosniff
  X-Frame-Options: DENY
  Referrer-Policy: strict-origin-when-cross-origin
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://maps.googleapis.com https://mtbgayqzjrxjjmsjikcg.supabase.co https://www.google.com https://www.gstatic.com; connect-src 'self' https://mtbgayqzjrxjjmsjikcg.supabase.co https://maps.googleapis.com https://www.google.com https://*.netlify.app; img-src 'self' data: https://maps.googleapis.com https://maps.gstatic.com https://mtbgayqzjrxjjmsjikcg.supabase.co; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; frame-src https://www.google.com;
  Permissions-Policy: geolocation=self
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: GET, POST, OPTIONS
  Access-Control-Allow-Headers: Content-Type, Authorization

# Handle dev-server CORS
/dev-server
  Access-Control-Allow-Origin: *
  Access-Control-Allow-Methods: GET, POST, OPTIONS
  Access-Control-Allow-Headers: Content-Type, Authorization
